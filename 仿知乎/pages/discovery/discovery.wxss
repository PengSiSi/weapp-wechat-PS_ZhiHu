/*列表CSS  */
.itemTopView {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: space-between;
  width: 300px
}

.itemView {
  display: flex;
  flex-direction: column;
  border-bottom: 0.5px solid lightgray;
}

.avaterIcon {
  width: 40px;
  height: 40px;
  display: flex;
  margin: 10px 5px;
  background-color: green;
  align-self: center;
  /* border-radius: 20px;  */
}

.rightIconView {
  display: flex;
  /* flex: 1; */
  float: right;
}

.item-more {
  width: 30px;
  height: 30px;
}

.contentView {
  display: flex;
  flex-direction: column;
  margin: 10px;
  width: 320px
}

.bottomView {
  margin: 10px;
  font-size: 15px;
}